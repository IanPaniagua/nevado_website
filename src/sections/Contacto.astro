---
import ContactForm from "../components/ContactForm.astro";
import ContactInfo from "../components/ContactInfo.astro";

const id = "contacto";
---

<section id={id} class="w-full bg-blue-50">
  <div class="bg-blue-50 rounded-lg py-6">
    <h1
      class="text-center text-blue-800 text-6xl sm:text-[48px] sm:leading-[58px] max-sm:text-[36px] max-sm:leading-[46px]"
    >
      CONTACTO
    </h1>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-10">
      <ContactForm />
      <ContactInfo />
    </div>
  </div>
</section>
