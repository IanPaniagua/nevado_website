---
import products from "../mocks/products.json";
const id = "productos";
---

<section id={id} class="w-full bg-blue-50">
  <div class="bg-blue-200 rounded-lg py-6">
    <h1
      class="text-center text-blue-800 text-6xl sm:text-[48px] sm:leading-[58px] max-sm:text-[36px] max-sm:leading-[46px]"
    >
      PRODUCTOS
    </h1>
  </div>
  <div
    class="container mx-auto grid lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-1 sm:gap-6 gap-14 p-4 py-14"
  >
    {
      products.map((product) => (
        <figure class="flex flex-col w-full max-sm:w-full rounded-lg p-4 bg-white shadow-lg hover:shadow-xl transition-shadow duration-300">
          <img
            src={product.image}
            alt="image of product"
            class="w-56 h-56 self-center"
          />
          <h3 class="mt-2 text-2xl text-blue-800 leading-normal font-semibold">
            {product.name}
          </h3>
          <span class="mt-1 text-1xl text-blue-600 leading-normal font-semibold">
            {product.packaging}
          </span>
          <p class="mt-2 text-blue-800 text-1xl leading-normal">
            {product.description}
          </p>
        </figure>
      ))
    }
  </div>
</section>
