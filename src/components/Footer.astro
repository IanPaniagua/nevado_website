---
import companyInfo from "../mocks/company.json";
---
<section class="w-full bg-blue-800 text-white py-8">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8  min-h-[200px]">
    <div class="flex flex-col lg:flex-row lg:justify-between">
      <!-- Información de la Empresa -->
      <div class="mb-6 lg:mb-0">
        <h2 class="text-xl font-semibold mb-2">{companyInfo.company.name}</h2>
        <p class="text-gray-300 mb-4">
          Procesamiento y comercialización de insumos no metálicos para diversas
          industrias.
        </p>
        <p class="text-gray-300 mt-auto">
          © 2024 Nevado. Todos los derechos reservados.
        </p>
      </div>

      <!-- Enlaces de Navegación -->
      <div class="mb-6 lg:mb-0">
        <h3 class="text-lg font-semibold mb-2">Enlaces Rápidos</h3>
        <ul class="space-y-2">
          <li><a href="/" class="hover:text-gray-400">Inicio</a></li>
          <li>
            <a href="#conocenos" class="hover:text-gray-400">Sobre Nosotros</a>
          </li>
          <li><a href="#productos" class="hover:text-gray-400">Productos</a></li>
          <li><a href="#contacto" class="hover:text-gray-400">Contacto</a></li>
        </ul>
      </div>

      <!-- Información de Contacto -->
      <div class="mb-6 lg:mb-0">
        <h3 class="text-lg font-semibold mb-2">Contacto</h3>
        <ul class="space-y-2">
          <li class="flex items-center">
            <svg
              class="w-5 h-5 text-gray-300 mr-2"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5h18M3 10h18M3 15h18M3 20h18"></path>
            </svg>
            <p>{companyInfo.company.phone}</p>
          </li>
          <li class="flex items-center">
            <svg
              class="w-5 h-5 text-gray-300 mr-2"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l9 6 9-6M4 6h16a1 1 0 011 1v12a1 1 0 01-1 1H4a1 1 0 01-1-1V7a1 1 0 011-1z"
              ></path>
            </svg>
            <p>{companyInfo.company.email}</p>
          </li>
          <li class="flex items-center">
            <svg
              class="w-5 h-5 text-gray-300 mr-2"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 4v16m8-8H4"></path>
            </svg>
            <p>{companyInfo.company.address}</p>
          </li>
        </ul>
      </div>
    </div>

    <!-- Redes Sociales -->
    <div class="flex justify-center mt-6 space-x-4">
      <a href="#" class="text-gray-300 hover:text-gray-400">
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 12h16M4 6h16m-7 6h7M4 18h16"></path>
        </svg>
      </a>
      <a href="#" class="text-gray-300 hover:text-gray-400">
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 6a9 9 0 0118 0A9 9 0 013 6zM3 6a9 9 0 0118 0A9 9 0 013 6zM3 6a9 9 0 0118 0A9 9 0 013 6z"
          ></path>
        </svg>
      </a>
      <a href="#" class="text-gray-300 hover:text-gray-400">
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5h6m-3 3v6"></path>
        </svg>
      </a>
      <a href="#" class="text-gray-300 hover:text-gray-400">
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5h6m-3 3v6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
